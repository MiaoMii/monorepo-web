{
  "root": true,
  "ignorePatterns": ["**/*.d.ts"],
  "parser": "vue-eslint-parser",
  "plugins": ["@typescript-eslint/eslint-plugin", "prettier", "vue"],
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "allowImportExportEverywhere": true // 不限制eslint对import使用位置
  }
}
